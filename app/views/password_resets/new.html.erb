<% provide(:title, "Forgot password") %>
<h1 style= "color: #FD5DA8;">Forgot password</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: password_resets_path, scope:
    :password_reset,
    local: true) do |f| %>
    <%= f.label :email, style: "color: #FD5DA8;" %>
    <%= f.email_field :email, class: 'form-control', style: "color: #FD5DA8;"%>
    <%= f.submit "Submit", class: "btn btn-primary", style: "background-color: #FD5DA8;" %>
  <% end %>
  </div>
</div><%=  %>
