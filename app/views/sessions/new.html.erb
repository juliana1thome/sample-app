<% provide(:title, "Log in") %>
<h1 style= "color: #FD5DA8;">Log in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local:
                  true) do |f| %>
                  <%= f.label :email, style: "color: #FD5DA8;" %>
                  <%= f.email_field :email, class: 'form-control' %>
                  <%= f.label :password, style: "color: #FD5DA8;"%>
                  <%= f.password_field :password, class: 'form-control' %>
                  <%= f.submit "Log in", class: "btn btn-primary", style: "background-color: #FD5DA8;"%>
                <% end %>
                <p>New user? <%= link_to "Sign up now!", signup_path, style: "color: #FD5DA8;" %></p>
  </div>
</div>
