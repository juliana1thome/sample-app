<% provide(:title, "Log in") %>
<h1 style= "color: #FD5DA8;">Log in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <%= f.label :email, style: "color: #FD5DA8;" %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.label :password, style: "color: #FD5DA8;"%>
      <%= f.password_field :password, class: 'form-control' %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span style="color: #FD5DA8">Remember me on this computer</span>
      <% end %>
      <%= f.submit "Log in", class: "btn btn-primary", style: "background-color: #FD5DA8;"%>
    <% end %>
    <p style="color: #FF1493">New user? <%= link_to "Sign up now!", signup_path, style: "color: #FD5DA8;" %></p>
  </div>
</div>
